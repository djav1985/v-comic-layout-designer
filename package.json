{
  "name": "comic-layout-designer",
  "version": "2.0.0",
  "description": "Electron desktop application for arranging comic page layouts and exporting them to PDF or images.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint \"src/**/*.js\"",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"layouts/**/*.css\" README.md CHANGELOG.md",
    "test": "npm run lint"
  },
  "author": "Vontainment",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3"
  }
}
