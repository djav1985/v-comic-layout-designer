{
  "name": "comic-layout-designer",
  "version": "v1.0.0",
  "description": "Electron wrapper with embedded PHP server for the V Comic Layout Designer application.",
  "main": "electron/main.js",
  "scripts": {
    "electron:dev": "npm run start",
    "start": "electron .",
    "dev": "electron . --dev",
    "lint": "prettier --check \"electron/**/*.js\"",
    "format": "prettier --write \"electron/**/*.js\"",
    "build": "electron-builder --dir",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux",
    "test": "npm run lint && npm run build",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.6.4",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "get-port": "^7.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.v.comiclayoutdesigner",
    "productName": "V Comic Layout Designer",
    "asar": false,
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "app/**/*",
      "public/**/*",
      "layouts/**/*",
      "composer.json",
      "composer.lock",
      "vendor/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/php",
        "to": "resources/php"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "v-comic-layout-designer-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
