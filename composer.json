{
    "name": "v/comic-layout-designer",
    "description": "MVC app for drag-and-drop comic pages and PDF export",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "nikic/fast-route": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "vendor/bin/phpcbf --standard=phpcs.xml app/Models tests",
        "lint": "vendor/bin/phpcs --standard=phpcs.xml app/Models tests",
        "test": "vendor/bin/phpunit"
    }
}
